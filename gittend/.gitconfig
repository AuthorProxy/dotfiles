[pull]
  ff = only
[push]
  default = simple
  followTags = true
[remote]
  pushdefault = origin

[rebase]
  autosquash = true # TODO: refresh memory
  autostash = true
[rerere]
  enabled = false # TODO: give another chance?
  autoupdate = true # autostaging # TODO: refresh memory

[merge]
  ff = false
  log = true
  #branchdesc = true
  tool = kdiff3
  stat = true
